#!/usr/bin/env bash

set -euo pipefail

readonly BUILD_DIR=$1
readonly COMPACT_FILE=.slug-compact
readonly OUTPUT_FILE=compact.tar

if [[ ! -n "${BUILD_DIR}" ]]; then
  echo "No build directory specified - exiting"
  exit 1
fi

cd ${BUILD_DIR}

cat ${COMPACT_FILE} | xargs tar cpf ${OUTPUT_FILE}

cat ${COMPACT_FILE} | xargs rm -R
