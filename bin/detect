#!/usr/bin/env bash

set -euo pipefail

readonly BUILD_DIR=$1

if [[ ! -n "${BUILD_DIR}" ]]; then
  echo "No build directory specified - exiting"
  exit 1
fi

if [[ ! -f "${BUILD_DIR}/.slug-compact" ]]; then
  echo "Could not find .slug-compact file - exiting"
  exit 1
fi

echo "COMPACT BUILD"
exit 0
